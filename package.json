{
  "name": "financial-transaction-service",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src/**/*.ts --exec \"node_modules/.bin/ts-node src/server.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typeorm": "npx ts-node ./node_modules/typeorm/cli.js --dataSource src/data-source.ts",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "populate": "ts-node scripts/populate-database.ts",
    "populate:50k": "ts-node scripts/populate-database.ts 50000",
    "populate:20k": "ts-node scripts/populate-database.ts 20000",
    "k6:setup": "docker-compose -f docker-compose-k6.yml up -d influxdb grafana",
    "k6:down": "docker-compose -f docker-compose-k6.yml down",
    "replication:up": "docker compose -f docker-compose-replication.yml up -d",
    "replication:down": "docker compose -f docker-compose-replication.yml down",
    "replication:build": "docker compose -f docker-compose-replication.yml up --build -d",
    "replication:logs": "docker compose -f docker-compose-replication.yml logs -f",
    "replication:status": "docker compose -f docker-compose-replication.yml ps",
    "replication:test": "bash scripts/testar-replicacao.sh",
    "test:falha-api": "bash scripts/run-teste-falha-api.sh",
    "test:falha-banco": "bash scripts/run-teste-falha-banco.sh",
    "test:multiplas-falhas": "bash scripts/run-teste-multiplas-falhas.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KaiokkFernandes/financial-transaction-service.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KaiokkFernandes/financial-transaction-service/issues"
  },
  "homepage": "https://github.com/KaiokkFernandes/financial-transaction-service#readme",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.3",
    "@types/uuid": "^10.0.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.26",
    "uuid": "^9.0.1"
  }
}
